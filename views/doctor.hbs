<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="../public/stylesheets/doctor.css" />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous"/>
		<title>Doctor's Office</title>
	</head>

	<body>
		
		  <nav class="navbar">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="../public/imgs/logo.svg" alt="logo" width="40" height="40" align="left">
          <h3>MEDITECH</h3>
		  <div id="logoutbtndiv">
          <form action="/logout" method="GET" style="margin-left: 1110px; margin-top:-38px; margin-bottom: 1em">
            <button type="submit" class="btn btn-secondary" >Logout</button>
          </form>

        </div>
      </div>
    </nav>
		<div id="content">
			<!--DISPLAYING DOCOTR NAME & CURRENT DATE-->
			<div id="doctorinfodiv" class="row align-items-center">
				<div id="namediv" class="col-7" >
					 <h1 id="doctorname" align="left"><span style="color:#2AC5C5; font: size 60px;">Welcome</span>, Dr. {{user.name}}</h1>
					 <h6 class="display-6" id="date">Todays Date: {{todaysDate}}</h6>
				</div>
				<div id="imagediv" class="col-4">
				</div>
			</div>

			<!--LIST OF PATIENTS-->
			<div id="patientinfodiv">
				<h2 style="padding-bottom: 0.5em;">Patient List</h2>
				<!-- Displaying the Patients information-->
				<table class="table" id="patientDetailsTable">
				<thead>
					<tr>
					<th>Name</th>
					<th>Age</th>
          <th>Gender</th>
					<th>Contact</th>
					<th>Action</th>
					</tr>
				</thead>
				<tbody>
					 {{#each Patients}}
					<tr>
					<td>{{patientName}}</td>
					<td>{{patientAge}}</td>
          <td>{{sex}}</td>
					<td>{{phone}}</td>
          
					<td>
            <form action="patients/{{patientID}}" method="POST">
              <button type="submit" class="btn btn-primary">View</button>
            </form>
					</td>
					</tr>
					 {{/each}}
				</tbody>
				</table>
				</div>	
			</div>
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>
        <script src="../public/js/main.js"></script>
	</body>
</html>
